<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans 
	
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		  http://www.springframework.org/schema/context
		  http://www.springframework.org/schema/context/spring-context-3.2.xsd
          http://www.springframework.org/schema/security
          http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<context:component-scan base-package="com.ehealth.doctors"/>
	<global-method-security pre-post-annotations="enabled" />
	<http auto-config='true' use-expressions="true">
		<intercept-url pattern="/login*" access="isAnonymous()" />
		<intercept-url pattern="/clinic*" access="isAuthenticated()" />
		<intercept-url pattern="/clinic/*" access="isAuthenticated()" />
		<intercept-url pattern="/home/secured/home" access="isAuthenticated()" />
		<form-login default-target-url="/home/secured/home"
			login-processing-url="/j_spring_security_check"
			always-use-default-target='true' authentication-failure-url="/loginError" />
		<logout logout-success-url="/logout" />
	</http>


	<authentication-manager erase-credentials="true">
		<authentication-provider ref="customAuthenticationProvider">

		</authentication-provider>
	</authentication-manager>

	<beans:bean name="cService" class="com.ehealth.doctors.service.ClinicService" />


</beans:beans>